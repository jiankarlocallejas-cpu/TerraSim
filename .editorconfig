root = true

# All files
[*]
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# TOML files
[*.toml]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2
