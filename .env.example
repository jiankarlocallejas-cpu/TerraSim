# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# ==================== OAuth Configuration ====================
# Google OAuth - Get credentials from: https://console.cloud.google.com/
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback/google

# GitHub OAuth - Get credentials from: https://github.com/settings/developers
OAUTH_GITHUB_CLIENT_ID=your_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret
OAUTH_GITHUB_REDIRECT_URI=http://localhost:8000/auth/callback/github

# ==================== Database Configuration ====================
DATABASE_URL=postgresql://user:password@localhost/terrasim

# ==================== JWT Configuration ====================
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
REACT_APP_NAME=TerraSim
REACT_APP_VERSION=2.0.0
REACT_APP_DESCRIPTION=Advanced GIS Erosion Modeling Platform

# Map Configuration
REACT_APP_DEFAULT_LAT=40.7128
REACT_APP_DEFAULT_LNG=-74.0060
REACT_APP_DEFAULT_ZOOM=10

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true
